<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create Issue - Issue Tracker</title>
    <style>
      body{
        background-image: url('https://s42509.pcdn.co/wp-content/uploads/2021/09/shutterstock_533855503-scaled.jpg')
      }
      #issue-main{
        display: flex;
        flex-direction: column;
         height: 85vh;
         width: 50%;
          background-color: #f2bac8;
           margin-left: 27%;
           border-radius: 20px; 
           box-shadow: 5px 5px 9px  rgb(77, 68, 8);
      }
      h1{
        text-align: center;
         color: blue;
         text-shadow:  5px 5px 9px  rgb(77, 68, 8);
         
      }
      #issue-form{
        display: flex; 
        flex-direction: column;
        align-items: center;
        margin-top: -20px;
      }
      .name{
        margin-bottom: 1vh;
         font-size: 1.2rem;
         font-weight: bold;
      }
      #description{
        border: 1px solid #f2bac8;
         border-radius: 10px;
        height: 15vh;
        width: 20vw;
        margin-bottom: 1vh;
        box-shadow: 5px 5px 5px rgb(77, 68, 8);
      }
      #author{
        height: 5vh;
        width: 20vw;
        border: 1px solid #f2bac8;
         border-radius: 10px;
         box-shadow: 5px 5px 5px rgb(77, 68, 8);
      }
      #title{
        height: 5vh;
        width: 20vw;
        margin-bottom: 1vh;
         border: 1px solid #f2bac8; 
         border-radius: 10px;
         box-shadow: 5px 5px 5px rgb(77, 68, 8);
      }
      #createbtn{
        height: 32px;
        width: 10vw; 
        margin-left: 0vw;
        margin-top: 4vh;
        /* box-shadow: 10px 10px; */
        box-shadow: 5px 5px 9px  rgb(77, 68, 8);
        font-size: 1.2rem;
        font-weight: bold;
        background-color: #cda061;
        color: white;
    text-shadow: 5px 5px 5px rgb(77,68,8);
    border-radius: 11px;
      }
      #label-list{
        display: flex;
        flex-direction: column;
      }
    </style>
  </head>
  <body>
    <a href="/" class="home-button"> <img src="https://cdn-icons-png.flaticon.com/512/5974/5974636.png" alt="home" height="50px" width="50px"></a>

    <div id="issue-main">


    <h1>Create Issue <hr></h1>

    <form action="/projects/<%= project._id %>/issues" method="POST" id="issue-form">
      <label for="title" class="name">Title:</label>
      <input type="text" id="title" name="title" required>

      <label for="description" class="name">Description:</label>
      <textarea id="description" name="description" required></textarea>

   
        <label for="labels" class="name">Labels:</label>
        <div id="label-list">
        <% if (project && project.labels) { %>
          <% project.labels.forEach((label) => { %>
            <label>
              <input type="checkbox" id="<%= label %>" name="labels[]" value="<%= label %>">
              <%= label %>
            </label>
          <% }); %>
        <% } %>
        <label>
          <input type="checkbox" id="need_improvement" name="labels[]" value="need improvement">
          Need Improvement
        </label>
        <label>
          <input type="checkbox" id="admin" name="labels[]" value="admin">
          Admin
        </label>
        <label>
          <input type="checkbox" id="Ui-improvement" name="labels[]" value="Ui improvement">
          Ui improvement
        </label>
        <label>
          <input type="checkbox" id="front-end" name="labels[]" value="FrontEnd">
          FrontEnd
        </label>
      </div><br>
      

      <label for="author" class="name">Author:</label>
      <input type="text" id="author" name="author" value="<%= author %>" required>

      <button id="createbtn">Create</button>
    </form>
  </div>
  </body>
</html>
